		TNT1 A 0 A_SeekerMissile(15,15,SMF_LOOK|SMF_PRECISE)
		TNT1 A 0 A_SpawnItemEx("RevenantFireTrailparticle")
		TNT1 A 0 A_SpawnItemEx("OldschoolRocketSmokeTrail2")
