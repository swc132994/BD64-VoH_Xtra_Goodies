		TNT1 A 0 A_Takeinventory("TossMine",0)
		TNT1 A 0 A_Takeinventory("PlaceMine",0)
		TNT1 A 0 A_Takeinventory("Kicking",0)
		RVDW ABCD 1
		TNT1 A 1 A_Lower
		Wait
	Select:
		TNT1 A 0 A_PlaySound("heatseek/raise")
		RVDW DCBA 1 Offset(0,32)
		TNT1 A 0 A_Raise
		Wait
	v1Ready:
	Ready:
		RVCG A 4 A_WeaponReady
		TNT1 A 0 A_JumpIfInventory("Kicking",1,"DoKick")
		TNT1 A 0 A_JumpIfInventory("TossMine",1,"TossMine")
		TNT1 A 0 A_JumpIfInventory("PlaceMine",1,"PlaceMine")
		Loop
	Fire:
		TNT1 A 0 A_JumpIfTargetInLOS("OpenFire")
		RVCG J 1
		Goto Ready
	OpenFire:
		TNT1 A 0 A_JumpIfInventory("HeatseekerSwitchShoulder",1,"OpenFire2")
		RVCG B 2 BRIGHT A_FireCustomMissile("64HeatseekerProjectilePlayer",random(4,-4),1,-25)
		RVCG C 2 BRIGHT A_AlertMonsters
		RVCG DDEAA 2
		TNT1 A 0 A_GiveInventory("HeatseekerSwitchShoulder",1)
		Goto Ready
	OpenFire2:
		RVCG F 2 BRIGHT A_FireCustomMissile("64HeatseekerProjectilePlayer",random(4,-4),1,25)
		RVCG G 2 BRIGHT A_AlertMonsters
		RVCG HHIAA 2
		TNT1 A 0 A_TakeInventory("HeatseekerSwitchShoulder",1)
		Goto Ready
	AltFire:
		TNT1 A 0 A_JumpIfInventory("RocketAmmo",2,"CheckAltTarget")
		TNT1 A 0 A_Print("Not Enough Ammo!",2)
		Goto Ready
	CheckAltTarget:
		TNT1 A 0 A_JumpIfTargetInLOS("OpenFire4")
		RVCG J 1
		Goto Ready
	OpenFire4:
		TNT1 A 0 A_FireCustomMissile("64HeatseekerProjectilePlayer",random(4,-4),1,25)
		RVDF B 2 BRIGHT A_FireCustomMissile("64HeatseekerProjectilePlayer",random(4,-4),1,-25)
		RVDF C 2 BRIGHT A_AlertMonsters
		RVDF DDDE 2
		RVCG AAA 2
		Goto Ready
	MineThrowFlash:
		RVDW ABCE 1
		TNT1 A 18
		RVDW ECBA 1
		Stop
	KickingFlash:
		RVDW ABCD 1
		RVDW D 8
		RVDW DCBA 1
		Stop
	AirKickingFlash:
		RVDW ABCD 1
		RVDW D 10
		RVDW DCBA 1
		Stop
	SlideKickingStart:
		RVDW ABCD 1
		RVDW D 18
	SlideKickingEnd:
		RVDW D 6
		RVDW DCBA 1
		Stop
	TossMine:
		"----" A 0 A_JumpIfInventory("64MineAmmo",1,2)
		"----" A 0 A_Print("No Mines in inventory!")
		Goto GetReady
		TNT1 A 0 A_GunFlash("MineThrowFlash")
		TNT1 A 5
		PMNF D 1 Offset(0,46)
		PMNF D 1 Offset(0,39)
		PMNF D 1 Offset(0,34)
		PMNF D 1 Offset(0,33)
		PMNF EFG 1
		TNT1 A 0 A_TakeInventory("64MineAmmo",1,TIF_NOTAKEINFINITE)
		TNT1 A 0 A_FireCustomMissile("64ThrownActiveProxMine1",0,0,0,0,0,10)
