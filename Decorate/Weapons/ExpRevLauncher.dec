		PMNF D 1 Offset(0,39)
		PMNF D 1 Offset(0,34)
		PMNF D 1 Offset(0,33)
		PMNP BCDE 1
		TNT1 A 0 A_TakeInventory("64MineAmmo",1,TIF_NOTAKEINFINITE)
		TNT1 A 0 A_FireCustomMissile("64GroundProxMine")
		TNT1 A 13
		Goto GetReady
	}
}