Weapon.SelectionOrder 8000
Weapon.SlotNumber 9
Weapon.BobRangeX 0
Weapon.AmmoType "RocketAmmo"
Weapon.AmmoUse 1
Weapon.AmmoGive 4
+WEAPON.NOAUTOAIM
+WEAPON.NOALERT
+WEAPON.EXPLOSIVE
+WEAPON.ALT_USES_BOTH
+INVENTORY.RESTRICTABSOLUTELY
Inventory.PickupMessage "You got the Heatseeker Missile Launchers!"
Inventory.PickupSound "WPICK"
Tag "Heatseeker Missile Launcher"
	States
	{
	Spawn:
		HLAU Z -1
		Stop
	Deselect:
		TNT1 A 0 A_TakeInventory("HeatseekerSwitchShoulder",0)
