		TNT1 A 0 A_ZoomFactor(1.0)
		DARN K 3 A_SetPitch(pitch-5,SPF_INTERPOLATE)
		DARN L 1 A_SetPitch(Pitch+0.5,SPF_INTERPOLATE)
		DARN MN 1 A_SetPitch(Pitch+0.6,SPF_INTERPOLATE)
		TNT1 A 0 A_Refire("ActualFanningFire")
		DARN EDCBA 1
		Goto Ready
	}
}