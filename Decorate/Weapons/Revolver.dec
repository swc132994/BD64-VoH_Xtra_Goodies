		TNT1 A 0 A_JumpIfInventory("64SpeedloaderAmmo",1,1)
		Goto NoAmmo
		TNT1 A 0 A_Takeinventory("64SpeedloaderAmmo",1,TIF_NOTAKEINFINITE)
