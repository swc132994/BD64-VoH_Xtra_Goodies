		TNT1 A 0 A_JumpIfInventory("RevolverAmmo",2,"SmartReload") //4 Bullets Ejected
		TNT1 A 0 A_JumpIfInventory("RevolverAmmo",1,"SmartReload") //5 Bullets Ejected
