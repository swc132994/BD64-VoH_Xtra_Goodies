		RE2R ABCD 1
		RE1R E 1
		TNT1 A 0 A_PlaySound("REVEJECT",1)
		RE2R FGHIJ 2
		TNT1 AA 0 A_Firecustommissile("BulletCaseSpawn",0,0,18,-26)
