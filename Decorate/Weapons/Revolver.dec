		RFVR II 5
		TNT1 A 0 A_PlaySound("REVREL2",1)
		RFVR JKLMNO 1
		RFVR PQ 2
		RFVR RSTUVWXYZ 1
		RF1R ABCD 1
		TNT1 A 0 A_PlaySound("REVREL3",1)
		DARR STUVWXYZ 1
		Goto InsertBullets
	OneBulletReload:
		RE1R ABCDE 1
		TNT1 A 0 A_PlaySound("REVEJECT",1)
		RE1R FGHIJK 2
		TNT1 A 0 A_Firecustommissile("BulletCaseSpawn",0,0,18,-26)
		RE1R LL 5
		RE1R MNOPQRS 1
		TNT1 A 0 A_PlaySound("REVINSRT",1)
		TNT1 A 0 A_GiveInventory("RevolverAmmo",1)
		TNT1 A 0 A_TakeInventory("64SpeedloaderAmmo",1)
		RE1R TUVW 2
		RF1R ABCD 1
		TNT1 A 0 A_PlaySound("REVREL3",1)
		DARR STUVWXYZ 1
		TNT1 A 0 A_JumpIfInventory("RevolverAlt",1,"TriggerDown")
		Goto Ready
