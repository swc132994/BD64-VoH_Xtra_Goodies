		TNT1 A 0 A_JumpIfInventory("PowerStrength",1,"CountinueReload1")
		TNT1 A 0 A_JumpIfInventory("RevolverAmmo",5,"OneBulletReload")
		TNT1 A 0 A_JumpIfInventory("RevolverAmmo",4,"TwoBulletsReload")
